<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#000012"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/calcTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="#E4CECE"
            android:textSize="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#AC2405"
                    android:foregroundTint="#988C8C"
                    android:onClick="clear"
                    android:shadowColor="#FFFFFF"
                    android:text="C"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#AC2405"
                    android:foregroundTint="#988C8C"
                    android:onClick="delete"
                    android:shadowColor="#FFFFFF"
                    android:text="âŒ«"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#121527"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="%"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#121527"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="/"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="1"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="2"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="3"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#121527"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="+"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="4"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="5"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="6"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#121527"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="-"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="7"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="8"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="9"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#121527"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="*"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="0"
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000012"
                    android:foregroundTint="#988C8C"
                    android:onClick="num"
                    android:shadowColor="#FFFFFF"
                    android:text="."
                    android:textColor="#AAA6A6"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#FFA500"
                    android:foregroundTint="#988C8C"
                    android:onClick="calc"
                    android:shadowColor="#FFFFFF"
                    android:text="="
                    android:textColor="#02021B"
                    android:textSize="25dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>